<Window x:Class="Diety.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" AllowsTransparency="True" ResizeMode="CanResizeWithGrip"
        xmlns:extensions="clr-namespace:Diety.Helpers.Extensions" Left="0" Top="0"
        Title="MainWindow" MinHeight="400" MinWidth="800" WindowStyle="None"
		 >	
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="20*"/>
		</Grid.RowDefinitions>
		<Grid Grid.Row="0" Margin="3,0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			<Button Grid.Column="1" Style="{StaticResource AppBarButtonStyle}" Margin="3,0" 
					extensions:WinodowStateControlButtonExtensions.IsMinimize="True">_</Button>
			<Button Grid.Column="2" Style="{StaticResource AppBarButtonStyle}" Margin="3,0" 
					extensions:WinodowStateControlButtonExtensions.IsMaximize="True">&#x25a1;
			</Button>
			<Button Grid.Column="3" Style="{StaticResource AppBarButtonStyle}" Margin="3,0" 
					extensions:WinodowStateControlButtonExtensions.IsClose="True">&#215;
			</Button>
		</Grid>
		<Frame Grid.Row="1"  NavigationUIVisibility="Hidden" x:Name="MainFrame" DataContext="{Binding Source={StaticResource Locator}, Path=Main}" />
	</Grid>
</Window>
